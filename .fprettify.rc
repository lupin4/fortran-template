# fprettify configuration
# Configuration file for fprettify Fortran formatter
# Usage: fprettify --config-file .fprettify.rc src/*.f90

[fprettify]
# Indentation settings
indent = 4
whitespace = 2

# Case settings (1=lowercase, 2=uppercase, 3=capitalize)
case = 1 1 1 1

# Strip trailing whitespace
strip-comments = false

# Line length
line-length = 120

# Enable/disable specific features
enable-decl = true
disable-indent = false