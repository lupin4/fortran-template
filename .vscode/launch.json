{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Fortran Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/gfortran_*/app/fortran-template-demo",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "fpm-build"
        }
    ]
}